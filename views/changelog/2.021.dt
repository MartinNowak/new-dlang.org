        - bugItem(920, "SPEC: Auto classes referenced where scope should be used");
        - bugItem(929, "Resizing array of associative arrays (uint[char[]][]) causes infinite loop / hang");
        - bugItem(1372, "Compiler accepts pragma(msg,)");
        - bugItem(1610, "Enum.stringof is int, not the name of the enum");
        - bugItem(1663, "pragma(lib, \"\") don't work on linux");
        - bugItem(1797, "Documentation comments - ///");
        - bugItem(2428, "Accessing item in enum'd array produced compiler error");
        - bugItem(2429, "std.stream.File incorrect flag parsing and sharing mode");
        - bugItem(2431, "Internal error: ../ztc/cgcod.c 1031 when using -O");
        - bugItem(2470, "Cannot build libraries from other libraries");
        li unittest functions now always use D linkage
